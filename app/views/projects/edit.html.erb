<div class="px-8">
  <div>
    <div class="flex flex-col items-center space-y-3">
      <svg class="w-20" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 67 67"><circle cx="33.5" cy="33.5" r="33.5" fill="#C4C4C4"/></svg>
      <h1 class="font-bold text-3xl">Project Name</h1>
    </div>
  </div>


  <div class="pt-4">
    <h2 class="font-medium text-center text-xl">Company name</h2>
  </div>

  <div class="pt-8">
    <p class="text-justify">Short description of the company Short description of the company Short description of the company Short description of the company.</p>
  </div>


  <div class="pt-8">
    <%= simple_form_for @project do |f| %>
    <div class="space-y-4">
      <div>
        <h2 class="text-center text-lg font-medium">Project description</h2>
      </div>
      <%= f.input :description,
                      label: false,
                      placeholder: 'Explain the project to the alumni...',
                      input_html: { class: "px-2 pt-2 pb-40 border border-gray-200 w-full"} %>

      <div>
        <h2 class="text-center text-lg font-medium">Project information</h2>
      </div>



      <%= f.input :duration,
                      required: false,
                      label: false,
                      placeholder: 'Estimated duration',
                      input_html: { class: "px-2 py-3 border border-gray-200 w-full text-center"} %>

      <%= f.input :compensation_in_cents,
                      required: false,
                      label: false,
                      placeholder: 'Compensation',
                      input_html: { class: "px-2 py-3 border border-gray-200 w-full text-center"} %>


    <div data-controller="project">
        <a data-action="click->project#backend" id="options-menu" class="px-2 py-3 flex items-center border w-full focus:outline-none">
          <span class="text-gray-400 text-center w-full">Backend</span>
          <div data-project-target="arrow_closed" >
            <svg class="w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </div>
          <div data-project-target="arrow_opened" class="hidden">
            <svg class="w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path></svg>
          </div>
        </a>

      <div data-project-target="backend_languages" class="">
        <div class="pt-6 inline-flex space-x-8 justify-center w-full">

          <%= simple_form_for [@project, @role_back] do |f|%>
          <%= f.input :number %>
          <% end %>

          <% @lang_back.each do |lang| %>

            <% if lang.language_roles.where(role: @role_back).empty? %>
              <%#= simple_form_for [@project, @role_back, LanguageRole.new(language: lang)] do |f|%>
              <%#= f.association :language, input_html: {class:"invisible", id: lang.name}, label: content_tag(:div, lang.svg.html_safe, class:'w-8')  %>
              <%#= f.submit %>
              <%# end %>
              <div class="px-2 py-2">
                <%= link_to content_tag(:div, lang.svg.html_safe, class:'w-8'), project_role_language_roles_path(@project, @role_back, lang_id: lang.id), method: :post%>
              </div>
            <% else %>
              <div class="px-2 py-2 bg-gray-100 rounded-xl shadow-inner">
                <%= link_to content_tag(:div, lang.svg.html_safe, class:'w-8 '), project_role_language_role_path(@project, @role_back, lang.language_roles.where(role: @role_back).first), method: :delete %>
              </div>
            <% end %>
          <% end %>

          <%#= simple_form_for [@project, @project.roles.second, LanguageRole.new] do |f| %>
          <%#= f.association :language, as: :check_boxes, collection: Language.where(category: "back"), label: false,
          label_method: lambda {|lang| content_tag(:div, lang.svg.html_safe, class:'w-8')  } %>
          <%#= simple_form_for @lr do |f| %>

          <%#= f.association :language, as: :radio_buttons, collection: Language.where(category:"back"), legend_tag: false,
                                      label_method: lambda {|language| language.svg.html_safe, class:'w-8'} %>


          <%# end %>
        </div>
      </div>

    </div>



    <div data-controller="project">
        <a data-action="click->project#frontend" id="options-menu" class="px-2 py-3 flex justify-end items-center border w-full focus:outline-none ">
          <span class="text-gray-400 text-center w-full">Frontend</span>
          <div data-project-target="arrow_closed" >
            <svg class="w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </div>
          <div data-project-target="arrow_opened" class="hidden">
            <svg class="w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path></svg>
          </div>
        </a>
      <div data-project-target="frontend_languages" class="">
        <div class="pt-6 inline-flex space-x-8 justify-center w-full">
          <%= simple_form_for [@project, @role_front] do |f|%>
          <%= f.input :number %>
          <% end %>

          <% @lang_front.each do |lang| %>

            <% if lang.language_roles.where(role: @role_front).empty? %>
              <%#= simple_form_for [@project, @role_front, LanguageRole.new(language: lang)] do |f|%>
              <%#= f.association :language, input_html: {class:"invisible", id: lang.name}, label: content_tag(:div, lang.svg.html_safe, class:'w-8')  %>
              <%#= f.submit %>
              <%# end %>
              <div class="px-2 py-2">
                <%= link_to content_tag(:div, lang.svg.html_safe, class:'w-8'), project_role_language_roles_path(@project, @role_front, lang_id: lang.id), method: :post%>
              </div>
            <% else %>
              <div class="px-2 py-2 bg-gray-100 rounded-xl shadow-inner">
                <%= link_to content_tag(:div, lang.svg.html_safe, class:'w-8 border-2 border-black', id: lang.name), project_role_language_role_path(@project, @role_front, lang.language_roles.where(role: @role_front).first), method: :delete %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div data-controller="project">
        <a data-action="click->project#ui_ux" id="options-menu" class="px-2 py-3 flex justify-end items-center border w-full focus:outline-none">
          <span class="text-gray-400 text-center w-full">UI / UX</span>
          <div data-project-target="arrow_closed" >
            <svg class="w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </div>
          <div data-project-target="arrow_opened" class="hidden">
            <svg class="w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path></svg>
          </div>
        </a>
      <div data-project-target="ui_ux_languages" class="">
        <div class="pt-6 inline-flex space-x-8 justify-center w-full">
          <%= simple_form_for [@project, @role_ux_ui] do |f|%>
          <%= f.input :number %>
          <% end %>

          <% @lang_ux_ui.each do |lang| %>

            <% if lang.language_roles.where(role: @role_ux_ui).empty? %>
              <%#= simple_form_for [@project, @role_ux_ui, LanguageRole.new(language: lang)] do |f|%>
              <%#= f.association :language, input_html: {class:"invisible", id: lang.name}, label: content_tag(:div, lang.svg.html_safe, class:'w-8')  %>
              <%#= f.submit %>
              <div class="px-2 py-2">
                <%= link_to content_tag(:div, lang.svg.html_safe, class:'w-8'), project_role_language_roles_path(@project, @role_ux_ui, lang_id: lang.id), method: :post%>
              </div>
              <%# end %>
            <% else %>
              <div class="px-2 py-2 bg-gray-100 rounded-xl shadow-inner">
                <%= link_to content_tag(:div, lang.svg.html_safe, class:'w-8 border-2 border-black'), project_role_language_role_path(@project, @role_ux_ui, lang.language_roles.where(role: @role_ux_ui).first), method: :delete %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

      <div class=" py-2">
        <%= f.submit 'Create project page', class:"w-full py-3 rounded bg-red-500 text-white font-medium"  %>
      </div>
    </div>
    <% end %>
  </div>


</div>
