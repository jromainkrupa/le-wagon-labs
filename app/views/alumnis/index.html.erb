
<div class="px-4 py-8 lg:px-24 xl:px-36 2xl:px-48">

  <div class="px-8">
    <input class="w-full px-4 py-2 border-2 border-gray-200" type="text" placeholder="Search by name or demo day project">
  </div>
    <div class="pt-16 flex flex-col space-y-6 lg:grid-cols-2 lg:grid lg:space-y-0 lg:gap-x-3 lg:gap-y-6 2xl:grid-cols-3">
      <% @alumnis.each do |alumni| %>
        <%= link_to alumni_path(alumni), class:"group" do %>
        <div class="group-hover:bg-gray-200 h-40 px-4 py-6 flex items-center space-x-6 border-2 border-gray-400 border-opacity-30 rounded-xl shadow lg:px-2 lg:space-x-4">
          <div>
            <svg class="w-20" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 67 67"><circle cx="33.5" cy="33.5" r="33.5" fill="#C4C4C4"/></svg>
          </div>
          <div>
            <div>
              <span class="text-red-500 tracking-widest uppercase"><%= alumni.city %></span>
            </div>
            <div class="pt-1 flex">
              <span class="text-xl font-medium"><%= alumni.name %></span>
            </div>
            <div class="pt-2">
              <div class="flex items-baseline">
              <span class="text-base text-gray-400 pr-4 font-medium">Expert in :</span>
                <% alumni.languages.first(10).each do |language| %>
                  <%= content_tag(:div, Language.find_by(name: language).svg.html_safe, class:'w-6 mr-2') %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
