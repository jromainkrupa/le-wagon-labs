<div data-menu-target="toggleable" class="hidden absolute z-40 right-0 -mt-3 mr-1 w-60 flex flex-col items-start">
  <div class="w-full">
    <%= button_to "Sign up Alumni", new_alumni_registration_path, method: :get, class:'px-3 py-3 text-gray-600 text-left text-xl w-full bg-white hover:text-white hover:bg-red-500' %>
  </div>
  <div class="w-full">
    <%= button_to "Sign up Entrepreneur", new_entrepreneur_registration_path, method: :get, class:'px-3 py-3 text-gray-600 text-left text-xl w-full bg-white hover:text-white hover:bg-red-500' %>
  </div>
  <div class="w-full">
    <%= button_to "Log in Alumni", new_alumni_session_path, method: :get, class:'px-3 py-3 text-gray-600 text-left text-xl w-full bg-white hover:text-white hover:bg-red-500' %>
  </div>
  <div class="w-full">
    <%= button_to "Log in Entrepreneur", new_entrepreneur_session_path, method: :get, class:'px-3 py-3 text-gray-600 text-left text-xl w-full bg-white hover:text-white hover:bg-red-500' %>
  </div>
  <%= (current_alumni ? (link_to "Log out", destroy_alumni_session_path, method: :delete, class: "dropdown-item") : (link_to "Log out", destroy_entrepreneur_session_path, method: :delete, class: "dropdown-item")) unless (current_alumni.nil? && current_entrepreneur.nil?) %>
</div>
